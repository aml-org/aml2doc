<!DOCTYPE html>
<html lang="en">
  <head>
    <title>{{name}}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="static/css/bootstrap.min.css">
    <link rel="stylesheet" href="static/css/custom.css">
    {{#css}}
      <link rel="stylesheet" href="{{.}}">
    {{/css}}
  </head>
  <body class="dialect-body" id="{{slug}}-body">
    <div class="container-fluid root-div-container"
         id="{{slug}}-root-div-container">

      <div class="col-md-2 aside" id="{{slug}}-nav-aside">
        <div class="main-nav">
          <h1>Index</h1>
          <hr>
          <p class="main-nav-item inactive-nav-item">
            <a href="index.html" title="Index">Index</a>
          </p>
        </div>
        <div class="dialects-nav">
          <h1>{{dialectsHeader}}</h1>
          <hr>
          {{#navData.dialects}}
            <p class="dialects-nav-item {{^active}}in{{/active}}active-nav-item">
              <a href="{{htmlName}}" title="{{name}}">{{name}}</a>
            </p>
          {{/navData.dialects}}
        </div>
        <div class="schemas-nav">
          <h1>{{schemasHeader}}</h1>
          <hr>
          {{#navData.nodeMappings}}
            <p class="schemas-nav-item {{^active}}in{{/active}}active-nav-item">
              <a href="{{htmlName}}" title="{{name}}">{{name}}</a>
            </p>
          {{/navData.nodeMappings}}
        </div>
      </div>

      <div class="col-md-10 content-block" id="{{slug}}-content-block">
        <h1 class="dialect-name">{{name}}</h1>

        <p class="dialect-url root-list-item">
          <span>URL: </span><span>{{id}}</span>
        </p>

        {{#usage}}
          <p class="dialect-description root-list-item">
            <span>Description: </span><span>{{usage}}</span>
          </p>
        {{/usage}}

        {{#version}}
          <p class="dialect-version root-list-item">
            <span>Version: </span><span>{{version}}</span>
          </p>
        {{/version}}

        {{#hasPrimaryLinks}}
            <div class="dialect-primary-download-links">
                <p>Download:</p>
                <ul>
                {{#primaryLinks}}
                    <li><a href="{{{href}}}">{{text}}</a></li>
                {{/primaryLinks}}
                </ul>
            </div>
        {{/hasPrimaryLinks}}

        <p class="dialect-schemas-list-title">Schemas:</p>
        <ul class="dialect-schemas-list">
          {{#nodeMappings}}
            <li class="dialect-schemas-list-item">
              <a href="{{{htmlName}}}" title="{{name}}">{{name}}</a>
            </li>
          {{/nodeMappings}}
        </ul>

          {{#hasSecondaryLinks}}
              <div class="dialect-secondary-download-links">
                  <p>Download in other formats:</p>
                  <ul>
                      {{#secondaryLinks}}
                          <li><a href="{{{href}}}">{{text}}</a></li>
                      {{/secondaryLinks}}
                  </ul>
              </div>
          {{/hasSecondaryLinks}}


      </div>

    </div>
  </body>
</html>
